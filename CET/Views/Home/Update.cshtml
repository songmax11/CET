@using static CET.Models.AttributesEnum
@model CET.ViewModel.TicketUpdateModel

<h1> Update CET @Model.Id </h1>

<form method="post">
	<select asp-for="Application"
			asp-items="@Html.GetEnumSelectList<ApplicationsEnum>()"></select>
	<select asp-for="TicketType"
			asp-items="@Html.GetEnumSelectList<TicketTypesEnum>()"></select>
	<select asp-for="Urgency"
			asp-items="@Html.GetEnumSelectList<UrgenciesEnum>()"></select>
	<select asp-for="Status"
			asp-items="@Html.GetEnumSelectList<StatusesEnum>()"></select>
	<br />
	<br />
	<label>Description</label>
	<p>
		<textarea asp-for="Description">@Model.Description</textarea>
		@*<textarea name="description" rows="4" cols="50"></textarea>*@
	</p>
	@*<input type="text" name="Applciation" value="" />*@
	<input type="submit" name="save" value="Save" />
</form>